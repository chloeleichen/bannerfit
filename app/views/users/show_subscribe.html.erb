<% provide(:title, @title) %>

  <aside class="col-md-6 ">
    <section>
      <%= image_tag @user.gravatar_url, class: "img-circle"  %>
      <h1><%= @user.profile_name %></h1>
      <span><%= link_to "View profile", profile_path(@user.profile_name) %></span>
      <span><b>Banners:</b> <%= @user.banners.count %></span>
      <%= render 'shared/stats' %>
    </section>

  </aside>
  <div class="col-md-6 ">
    <h3><%= @title %></h3>
    <% if @users.any? %>


      <table class="table table-striped ">
        <% @users.each do |user| %>
        <tr>

          <td>          
            <%= image_tag user.gravatar_url, class: "img-thumbnail" %>
          </td>
          <td><table><tr>

            <%= user.profile_name %> </tr>
            <tr>
          <td><span><%= link_to "View", profile_path(user.profile_name) %></span></td>
            
            </tr>
          </td>

            </tr></table>

            </td>
           <% end %>  


        </tr>

        
      </table>
      
    <% end %>
  </div>

