

<div class="page-header"> <h1>All Banners</h1></div>

<%= link_to 'Post a new banner', new_status_path, class: "btn btn-success" %>


<div class="row">
<% @statuses.each do |status| %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
     <img src="http://placehold.it/300x200" alt="...">
      <div class="caption">

        <div class="span1"> 



        </div>

        <strong> <%= status.user.profile_name %> </strong>
        

        <%= status.name %>
        
        <%= status.content %>
        
        <div><span class="label label-default"><%=link_to time_ago_in_words(status.created_at), status_path(status) %> ago</span></div>


      </div>
    </div>
  </div>

  <% end %>
</div>
